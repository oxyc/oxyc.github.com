html
  background: #eee
  height: 100%
  width: 100%

body
  max-width: 800px
  min-height: 100%
  margin: 0 auto
  padding: 0 5em
  font: normal 400 16px/1.5 Georgia, Serif
  color: #444
  background: #fff
  box-shadow: 0 0 3px #aaa

h1, h2
  color: #222
  margin: 0

p
  margin-top: 0

header
  padding-top: 1.5em
  vertical-align: top
  text-align: center

  hgroup

    h1
      font-size: 3em
      line-height:1.2

      a, a:visited
        color: #222
        text-decoration: none

    h2
      font-size: 1.5em
      font-weight: normal

  ul
    padding: 0
    list-style: none
    
section h1
  font-size: 1.5em
  font-weight: normal

body > footer
  border-top: solid 1px #888
  padding: 1.5em 0 
  margin-top: 1.5em
  font-size: .75em

section ul, section ol
  margin: 0
  padding: 0
  list-style: none

  h2
    font-weight: normal
    font-size: 1.25em

  &.grid li
    width: 33%
    margin: .25em 0
    border-bottom: solid 1px #eee
    padding: .25em 0

    b, abbr
      background: none
      border: none
      padding: 0


section ul li
  display: inline-block
  float:left
  width: 48%
  margin-right: 4%
  &:nth-child(2n)
    margin-right: 0

  &.wide
    width: 100%
    float:none


b, abbr
  display: inline-block
  background: #efefef
  border-bottom: solid 1px #ccc
  padding: 0 .25em
  font-weight: bold

  &.weak
    font-weight: normal

.vcard
  span
    display: none


.clearfix
  zoom: 1
  &:before, &:after
    content: ""
    display: table
  &:after
    clear: both

section > ol, section > ul, section > div
  overflow: hidden

section
  margin: 1.5em 0
  clear: both
  h1
    width: 7em
    float: left

article footer
  display: inline
  time
    color: #888
    margin-left: .25em

article h2
  display: inline

footer p
  text-align: right

ul.external
  margin: 0
  padding: 0
  list-style: none

.visuallyhidden
  visibility: hidden

.sprite
  background: url('../../assets/sprite.png') no-repeat top left
  width: 16px
  height: 16px
  margin-right:.5em
  float: left
  
  &.email
    background-position: 0 0
  &.facebook
    background-position: 0 -17px
  &.flickr
    background-position: 0 -34px
  &.github
    background-position: 0 -51px
  &.google
    background-position: 0 -68px
  &.linkedin
    background-position: 0 -85px
  &.twitter
    background-position: 0 -102px

@media screen and (max-width: 800px)
  section h1
    float: none
    width: auto
    border-bottom: dotted 1px #aaa
    margin-bottom: .5em

@media screen and (max-width: 600px)
  body
    padding: 0 1em

@media screen and (max-width: 480px)
  section ul li
    display: block
    width: 100%
    margin-right: 0
  section ul.grid li
    width: 50%
